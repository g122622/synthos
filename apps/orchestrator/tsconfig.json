{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@root/*": ["../../*"]
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es2023",
        "module": "esnext",
        "moduleResolution": "bundler"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
        { "path": "../../common" }
    ]
}
